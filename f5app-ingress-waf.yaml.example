apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: f5app-ingress-waf
  annotations:
    #kubernetes.io/ingress.class: "nginx-ingress"
    nginx.com/health-checks: "true"
    appprotect.f5.com/app-protect-enable: "True"
    appprotect.f5.com/app-protect-policy: "default/dataguard-block"
    appprotect.f5.com/app-protect-security-log-enable: "True"
    appprotect.f5.com/app-protect-security-log:
      "default/logconf"
      # Change for Syslog Service IP
    appprotect.f5.com/app-protect-security-log-destination: "syslog:server=syslog-svc-2.default.svc.cluster.local:514"
spec:
  ingressClassName: nginx-ingress
  tls:
    - hosts:
        - app.example.com
      secretName: f5app-secret
  rules:
    - host: waf.example.com
      http:
        paths:
          - pathType: Prefix
            path: /
            backend:
              service:
                name: f5-svc
                port:
                  number: 80
